# Application Settings
DEBUG=false
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://user:password@localhost/chatbot_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# Google Cloud / Gemini
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GEMINI_MODEL_NAME=your-fine-tuned-model
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# LLM Settings
LLM_MAX_RETRIES=3
LLM_TIMEOUT=30
LLM_TEMPERATURE=0.1

# Function Calling Settings
ENABLE_FUNCTION_CALLING=true
FUNCTION_CALLING_MODEL=gemini-1.5-flash-latest
FUNCTION_CALLING_TEMPERATURE=0.1
FUNCTION_CALLING_MAX_RETRIES=3
FUNCTION_CALLING_TIMEOUT=30

# Function Cache Settings
FUNCTION_CACHE_ENABLED=true
FUNCTION_CACHE_PRODUCT_TTL=300
FUNCTION_CACHE_GENERAL_INFO_TTL=3600
FUNCTION_CACHE_DEFAULT_TTL=600

# Function Performance Monitoring
FUNCTION_PERFORMANCE_TRACKING=true
FUNCTION_PERFORMANCE_LOG_SLOW_QUERIES=true
FUNCTION_PERFORMANCE_SLOW_QUERY_THRESHOLD=1000

# Function Fallback Settings
FUNCTION_FALLBACK_ENABLED=true
FUNCTION_FALLBACK_MAX_ATTEMPTS=2

# Cache Settings
CACHE_DEFAULT_TTL=3600
CACHE_FAQ_TTL=86400

# Session Settings
SESSION_TTL=86400
SESSION_CLEANUP_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security
API_KEY=
ALLOWED_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Escalation Settings
CONFIDENCE_THRESHOLD=0.80
ESCALATION_WEBHOOK_TIMEOUT=10
SLACK_WEBHOOK_URL=

# Email Settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
ESCALATION_EMAIL_RECIPIENTS=[]

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090